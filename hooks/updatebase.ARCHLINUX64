#! /bin/bash

if [ ! -f $target/etc/resolv.conf ]; then
    cp /etc/resolv.conf $target/etc
fi

if [ X$verbose = X1 ]; then
	echo "Updating base"
	$ROOTCMD pacman -Syu |& tee -a $LOGDIR/software.log
else
	$ROOTCMD pacman -Syu >> $LOGDIR/software.log
fi

$ROOTCMD systemd-machine-id-setup

skiptask updatebase
