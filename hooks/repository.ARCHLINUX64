#! /bin/bash
#original archlinux bootstrap tar.gz save all files in subfolder root.x86_64
mv $FAI_ROOT/root.x86_64/* $FAI_ROOT/
rmdir $FAI_ROOT/root.x86_64

cat <<'EOF' >> $target/etc/pacman.d/mirrorlist
Server = http://mirror.rackspace.com/archlinux/$repo/os/$arch
EOF

#create pacman trustdb
chroot $FAI_ROOT pacman-key --init

#refresh repos and update
chroot $FAI_ROOT pacman -Syu
